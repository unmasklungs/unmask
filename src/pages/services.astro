---
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="How We Help"
    subtitle="Unmasking the reality of lung cancer and empowering patients, caregivers, and advocates through education, support, and action."
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AstroWind Hero Image',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Patient & Caregiver Hub"
    title="Plain-language Guides"
    items={[
      {
        title: 'Diagnosis Explained',
        description: 'Diagnosis explained, treatment options (by stage & mutation), side effect management, and survivorship.',
      },
      {
        title: 'Interactive Treatment Navigator',
        description: 'Enter stage, biomarker results, and location → get customized treatment pathways (including clinical trials).',
      },
      {
        title: 'Ask a Nurse/Oncologist Chat',
        description: 'Real-time Q&A or scheduled virtual office hours.',
      },
      {
        title: 'Mental Health & Wellness Section',
        description: 'Meditation videos, coping strategies, caregiver burnout support.',
      },
      {
        title: 'Nutrition & Exercise for Lung Cancer',
        description: 'Downloadable meal plans and exercise adaptations by stage.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Advocacy & Policy Center"
    title="Take Action"
    items={[
      {
        title: 'Action Alerts',
        description: 'find email of MPs/representatives about lung cancer funding, clean air legislation, or drug approvals.',
      },
      {
        title: 'Legislation Tracker',
        description: 'Updates on federal/provincial policy changes affecting lung cancer patients.',
      },
      {
        title: 'Success Stories',
        description: 'Highlight advocacy wins to inspire others to join the fight.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Research & Clinical Trial Access"
    title="Stay Informed"
    items={[
      {
        title: 'Live Clinical Trial Finder',
        description: 'integrated with clinicaltrials.gov but simplified for patients',
      },
      {
        title: 'Research News Hub',
        description: 'Weekly updates on drug approvals, AI in lung cancer, and biomarker breakthroughs—written in plain language first, with a deeper science tab for researchers.',
      },
      {
        title: 'Researcher Collaboration Portal',
        description: 'A space for scientists to share data and form partnerships.',
      },
    ]}
  />

    <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Community & Storytelling"
    title="Share Your Story"
    items={[
      {
        title: 'Patient & Survivor Stories (Video & Written)',
        description: 'Filterable by stage, mutation, and journey (newly diagnosed, long-term survivor, caregiver).',
      },
      {
        title: '“Day in the Life” Vlogs',
        description: 'Real, raw patient perspectives.',
      },
      {
        title: 'Discussion Forums',
        description: 'Moderated safe spaces (Stage IV community, early-stage, caregiver groups).',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Awareness & Education"
    title="Learn More"
    items={[
      {
        title: 'Interactive Lung Model',
        description: 'Click to see how tumors form, how treatments work.',
      },
      {
        title: 'Myth-Busting Section',
        description: '"You must have smoked" & other stigmas addressed head-on.',
      },
      {
        title: 'Downloadable Posters & Infographics',
        description: 'for schools, workplaces, and clinics.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Air Quality & Prevention Tools (MAP)"
    title="Breathe Easier"
    items={[
      {
        title: 'Live Air Quality Map',
        description: 'Track pollution, wildfires, radon risk by postal code.',
      },
      {
        title: 'Radon & Screening Resources',
        description: 'Step-by-step guides to radon testing and LDCT screening eligibility.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Fundraising & Donation Transparency"
    title="Support Our Work"
    items={[
      {
        title: 'Where Your Money Goes Tracker',
        description: 'visual pie chart of research, support programs, etc.',
      },
      {
        title: 'Host Your Own Fundraiser Toolkit',
        description: 'Ready-made templates for walks, online challenges, etc.',
      },
    ]}
  />
</Layout>
