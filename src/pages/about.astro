---
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Unmasking the Reality of Lung Cancer Society
    </Fragment>

    <Fragment slot="subtitle">
      Unmasking the Reality of Lung Cancer Society is a not-for-profit organization dedicated to raising awareness, providing support, and advocating for those affected by lung cancer. We strive to dismantle the stigma surrounding the disease, promote early detection, and improve the quality of life for patients and their families.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    tagline="Our Mission"
    title="To unmask the reality of lung cancer by:"
    items={[
      {
        title: 'Educating',
        description:
          'Educating the public about the true nature of the disease, its causes, and its impact.',
      },
      {
        title: 'Supporting',
        description:
          'Providing a supportive community for patients, caregivers, and their loved ones.',
      },
      {
        title: 'Advocating',
        description:
          'Advocating for increased research funding, better access to care, and policies that protect lung health.',
      },
      {
        title: 'Empowering',
        description:
          'Empowering individuals to take control of their health through prevention and early detection.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Vision"
    title="A world where lung cancer is destigmatized"
    items={[
      {
        title: 'Destigmatized',
        description:
          'A world where lung cancer is destigmatized, and every person has the opportunity to live a long and healthy life, free from the burden of this disease.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    tagline="Our Values"
    title="Our values guide everything we do"
    items={[
      {
        title: 'Compassion',
        description:
          'We approach every individual with empathy, understanding, and a genuine desire to help.',
      },
      {
        title: 'Integrity',
        description:
          'We are committed to transparency, honesty, and ethical practices in all our endeavors.',
      },
      {
        title: 'Collaboration',
        description:
          'We believe in the power of partnership and work closely with patients, healthcare professionals, researchers, and other organizations to achieve our goals.',
      },
      {
        title: 'Empowerment',
        description:
          'We strive to provide individuals with the knowledge, resources, and support they need to make informed decisions and advocate for their own health.',
      },
      {
        title: 'Innovation',
        description:
          'We are dedicated to exploring new and creative ways to raise awareness, improve support services, and advance the fight against lung cancer.',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="What We Do"
    title="How we are making a difference"
    items={[
      {
        title: 'Awareness Campaigns',
        description:
          'We develop and implement public awareness campaigns to educate people about the risks of lung cancer, the importance of early detection, and the latest advancements in treatment.',
      },
      {
        title: 'Support Programs',
        description:
          'We offer a range of support programs for patients and their families, including support groups, educational workshops, and one-on-one peer support.',
      },
      {
        title: 'Advocacy Initiatives',
        description:
          'We work with policymakers and healthcare leaders to advocate for policies that improve access to care, increase research funding, and protect lung health.',
      },
      {
        title: 'Community Events',
        description:
          'We host a variety of community events to raise awareness, build community, and celebrate the lives of those affected by lung cancer.',
      },
    ]}
  />

  <!-- Team/Contributors Section -->
  <div class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
        Our Team
      </h2>
      <div class="space-y-6">
        <div class="space-y-1">
          <p class="text-lg"><span class="font-medium">Founder:</span> Diana</p>
          <p class="text-gray-600 dark:text-gray-400">unmaskinglungcancercalgary@gmail.com</p>
        </div>
        <div class="space-y-1">
          <p class="text-lg"><span class="font-medium">Developer:</span> Q Zhong</p>
          <p class="text-gray-600 dark:text-gray-400">qzhong@uwaterloo.ca</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
