---
import PageLayout from '../../layouts/PageLayout.astro';

const metadata = {
  title: 'For Professional',
  description: 'Information for professionals regarding radon gas and lung cancer.',
};
---

<PageLayout metadata={metadata}>
  <section class="py-16 sm:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-center mb-8">For Professional</h1>
      <p class="text-lg text-center">This section will contain information and resources tailored for professionals concerning radon gas and lung cancer.</p>
      <p class="text-lg text-center mt-4">Please check back soon for more content.</p>
    </div>
  </section>
</PageLayout>