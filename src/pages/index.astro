---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { SITE } from 'astrowind:config';

const metadata = {
  title: SITE.name,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Development Banner -->
  <div class="w-full bg-yellow-100 dark:bg-yellow-900 text-center py-2 px-4 text-sm text-yellow-800 dark:text-yellow-200">
    ðŸš§ This website is in active development. Please check back often for updates! ðŸš§
  </div>
  unmaskinglungcancer
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Learn More',
        href: '/about',
      },
      { text: 'Contact Us', href: '/contact' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Unmasking the Reality of Lung Cancer' }}
  >
    <Fragment slot="title">
      Unmasking the Reality of <span class="text-accent dark:text-white">Lung Cancer</span>
    </Fragment>

    <Fragment slot="subtitle">
      Unmasking the reality of lung cancer and empowering patients, caregivers, and advocates through education, support, and action.
    </Fragment>
  </Hero>

  <!-- Update Message Section *********** -->
  <div class="bg-gray-50 dark:bg-gray-900 py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          This new website from Unmasking the Reality of Lung Cancer is a work in progress and continually evolving for you.
          <a href="/contact" class="text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent transition-colors font-medium">
            Send us your name and email in the contact area
          </a> to be added to our update list.
        </p>
      </div>
      
      <!-- Additional Useful Information -->
      <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="text-accent dark:text-accent-light text-4xl mb-4">
            <i class="fas fa-book-medical"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Educational Resources</h3>
          <p class="text-gray-600 dark:text-gray-300">Access our library of lung cancer information, treatment options, and research updates.</p>
        </div>
        
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="text-accent dark:text-accent-light text-4xl mb-4">
            <i class="fas fa-hands-helping"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Support Network</h3>
          <p class="text-gray-600 dark:text-gray-300">Connect with others on a similar journey through our community support programs.</p>
        </div>
        
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="text-accent dark:text-accent-light text-4xl mb-4">
            <i class="fas fa-bullhorn"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Advocacy</h3>
          <p class="text-gray-600 dark:text-gray-300">Join our efforts to raise awareness and advocate for better lung cancer care and research.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Inspirational Quote Section *********** -->
  <div class="py-16 px-4 sm:px-6 lg:px-8 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto text-center">
      <blockquote class="text-2xl md:text-3xl font-light italic text-gray-800 dark:text-gray-200">
        "Everyone can be a pebble that helps create the avalanche of change."
      </blockquote>
    </div>
  </div>

  <!-- Latest Articles & News Section *********** -->
  <div class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">Latest Articles & News</h2>
        <p class="mt-4 text-xl text-gray-600 dark:text-gray-300">Stay updated with our latest insights and updates on lung cancer awareness and research</p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Artical One -->
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
              <span>Patient Journey</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
              <a href="/stories/diane" class="hover:text-accent dark:hover:text-accent-light transition-colors">
                Diane's Lung Cancer Journey
                <!-- This are the Title -->
              </a>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Read about Diane's personal experience with lung cancer and her journey through diagnosis, treatment, and advocacy.
            </p>
            <!--Link are Here  vvv -->
            <a href="/stories/diane" class="text-accent dark:text-accent-light hover:underline font-medium inline-flex items-center">
              Read story
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Article Two -->
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
              <span>Public Health</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
              <a href="/info/public/radon" class="hover:text-accent dark:hover:text-accent-light transition-colors">
                Understanding Radon: The Invisible Threat
              </a>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Learn about radon gas, its health risks, and how to protect your home and family from this leading cause of lung cancer in non-smokers.
            </p>
            <a href="/info/public/radon" class="text-accent dark:text-accent-light hover:underline font-medium inline-flex items-center">
              Learn more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Article Three -->
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
              <span>For Professionals</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
              <a href="/info/professionals/test" class="hover:text-accent dark:hover:text-accent-light transition-colors">
                Test Professional
              </a>
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              This is still an empty articles, come back often for more
            </p>
            <a href="/info/professionals/test" class="text-accent dark:text-accent-light hover:underline font-medium inline-flex items-center">
              View resources
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="mt-12 text-center">
        <a href="/stories" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-accent hover:bg-accent-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent dark:bg-accent-light dark:hover:bg-accent transition-colors">
          View More Stories
          <svg class="w-5 h-5 ml-2 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Donate',
        href: '/donate',
        icon: 'tabler:heart',
      },
    ]}
  >
    <Fragment slot="title">
      Support Our Cause
    </Fragment>

    <Fragment slot="subtitle">
      Unmasking does not solicit donations; we prefer you to support "directly" Canadian research and patient initiatives.
    </Fragment>
  </CallToAction>
</Layout>
