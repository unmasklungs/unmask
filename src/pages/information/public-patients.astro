---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
import ListItem from '../../components/blog/ListItem.astro';

const posts = (await getCollection('post')).filter(
  (post) => post.data.category === 'For public & patients'
);

const metadata = {
  title: 'For Public & Patients',
  description: 'Information for the public and patients regarding radon gas and lung cancer.',
};
---

<PageLayout metadata={metadata}>
  <section class="py-16 sm:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-center mb-8">For Public & Patients</h1>
      <p class="text-lg text-center">This section will contain information and resources tailored for the general public and patients concerning radon gas and lung cancer.</p>
      <p class="text-lg text-center mt-4">Below are relevant articles:</p>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start mt-8">
        {
          posts.map((post) => (
            <ListItem post={post} />
          ))
        }
      </div>
    </div>
  </section>
</PageLayout>