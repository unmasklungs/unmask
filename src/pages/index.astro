---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { SITE } from 'astrowind:config';

const metadata = {
  title: SITE.name,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Learn More',
        href: '/about',
      },
      { text: 'Contact Us', href: '/contact' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Unmasking the Reality of Lung Cancer' }}
  >
    <Fragment slot="title">
      Unmasking the Reality of <span class="text-accent dark:text-white">Lung Cancer</span>
    </Fragment>

    <Fragment slot="subtitle">
      Unmasking the reality of lung cancer and empowering patients, caregivers, and advocates through education, support, and action.
    </Fragment>
  </Hero>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Donate',
        href: 'https://www.paypal.com/donate/?hosted_button_id=YOUR_PAYPAL_BUTTON_ID',
        target: '_blank',
        icon: 'tabler:heart',
      },
    ]}
  >
    <Fragment slot="title">
      Support Our Cause
    </Fragment>

    <Fragment slot="subtitle">
      Your donation can make a difference in the lives of those affected by lung cancer.
    </Fragment>
  </CallToAction>
</Layout>
