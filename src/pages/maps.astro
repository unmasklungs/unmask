---
import PageLayout from '../layouts/PageLayout.astro';
import CanadaMap from '../components/CanadaMap.astro';

const metadata = {
  title: 'Canadian Map',
  description: 'Interactive map of Canadian electoral districts',
};

// Sample data for demonstration
const locations = [
  { id: 1, name: 'Vancouver General Hospital', lat: 49.2628, lng: -123.1212, radonLevel: 'Low' },
  { id: 2, name: 'BC Cancer Agency', lat: 49.2644, lng: -123.1193, radonLevel: 'Medium' },
  { id: 3, name: 'St. Paul\'s Hospital', lat: 49.2806, lng: -123.1290, radonLevel: 'High' },
];
---

<PageLayout metadata={metadata}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Canadian Map</h1>
    <p class="mb-8 text-gray-600">
      Click on any district to view more information. Use your mouse wheel to zoom in/out and drag to pan.
    </p>
    
    <!-- Interactive Canada Map -->
    <div class="mb-12">
      <CanadaMap width={800} height={600} client:load />
    </div>
    
    <div class="grid grid-cols-1 gap-8">
      <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Legend</h2>
        <div class="space-y-2">
          <div class="flex items-center">
            <div class="w-4 h-4 bg-green-500 rounded-full mr-2"></div>
            <span>Low Pollution Levels</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-yellow-500 rounded-full mr-2"></div>
            <span>Medium Pollution Levels</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-red-500 rounded-full mr-2"></div>
            <span>High Pollution Levels</span>
          </div>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Locations</h2>
        <div class="space-y-3">
          {locations.map(location => (
            <div class="p-3 border rounded hover:bg-gray-50 cursor-pointer">
              <div class="font-medium">{location.name}</div>
              <div class="text-sm text-gray-500">Radon Level: {location.radonLevel}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <div class="mt-8 bg-blue-50 border-l-4 border-blue-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h.01a1 1 0 100-2H10V9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            This is a demonstration of how the maps section could look. In a production environment, this would be integrated with a mapping service like Google Maps or Mapbox.
          </p>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
