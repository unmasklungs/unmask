---
import { SITE } from '~/config.mjs';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';

const meta = {
  title: `Patients' Stories`,
  description: "A collection of stories from patients.",
  canonical: getCanonical(getPermalink('/stories')),
};

const posts = (await getCollection('post', ({ id }) => {
  return id.startsWith('stories/');
})) as Array<CollectionEntry<'post'>>;
---

<Layout {meta}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline
      subtitle="Patients' Stories"
    >
      Patients' Stories
    </Headline>
    <BlogList posts={posts} />
  </section>
</Layout>
